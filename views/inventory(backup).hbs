{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  item has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Items</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="../archive" type="button">Archive</a>
    &#160
    <a href="newuser" type="button">Add Item +</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Product ID</th>
      <th scope="col">Product Name</th>
      <th scope="col">Product Price</th>
      <th scope="col">Product Type</th>
      <th scope="col">Stock In</th>
      <th scope="col">Stock Out</th>
      <th scope="col">Available Stock</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.product_id}}</th>
      <td>{{this.product_name}}</td>
      <td>{{this.product_price}}</td>
      <td>{{this.product_type}}</td>
      <td>{{this.stock_in}}</td>
      <td>{{this.stock_out}}</td>
      <td>{{this.available_stock}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.product_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.product_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.product_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>